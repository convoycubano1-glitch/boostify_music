# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id

# Database configuration
DATABASE_URL=postgresql://user:password@host:port/database
PGPASSWORD=your_postgres_password
PGUSER=your_postgres_user
PGPORT=5432
PGDATABASE=your_postgres_database
PGHOST=your_postgres_host

# Stripe Configuration
VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Apify Configuration
APIFY_API_TOKEN=your_apify_api_token
APIFY_ACTOR_ID=your_apify_actor_id

# OpenRouter Configuration
VITE_OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_API_KEY=your_openrouter_api_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# ElevenLabs Configuration
VITE_ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Shopify Configuration
VITE_SHOPIFY_API_KEY=your_shopify_api_key
VITE_SHOPIFY_API_SECRET=your_shopify_api_secret
VITE_APP_URL=https://your-app-domain.com/
VITE_SHOPIFY_REFRESH_TOKEN=your_shopify_refresh_token
VITE_SHOPIFY_LOCATION_ID=your_shopify_location_id
VITE_INVENTORY_THRESHOLD=5

# Production Configuration
NODE_ENV=production
PORT=5000
APP_URL=https://your-app-domain.com

# PM2 Configuration (For Production)
PM2_INSTANCES=1         # Number of instances to launch (use 0 for max cores)
PM2_EXEC_MODE=cluster   # Execution mode: 'fork' or 'cluster'
PM2_WATCH=false         # Watch for file changes (set to false in production)
PM2_MAX_MEMORY=512      # Restart app if it exceeds this memory limit (MB)

# Replit Configuration (Only needed if using Replit)
REPLIT_PORT=
REPLIT_IDENTITY=
REPL_SLUG=

# Security Settings
CORS_ORIGIN=*           # Use specific domain in production, e.g. https://your-domain.com
SESSION_SECRET=         # Strong random string for session encryption
COOKIE_SECURE=true      # Set to true in production (requires HTTPS)
COOKIE_SAME_SITE=lax    # Cookie same-site policy (lax, strict, or none)