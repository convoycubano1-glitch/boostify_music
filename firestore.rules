rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Función auxiliar para verificar la propiedad del documento
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Reglas para la colección waitlist
    match /waitlist/{docId} {
      allow read: if true;  // Lectura pública
      allow create: if 
        // Validar que el email es un campo requerido y es una cadena
        request.resource.data.keys().hasAll(['email']) &&
        request.resource.data.email is string &&
        // Validar el formato básico del email
        request.resource.data.email.matches('^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}$');
    }

    // Rules for music video requests
    match /music-video-request/{requestId} {
      allow read: if request.auth != null;  // Only authenticated users can read
      allow create: if request.auth != null && 
        request.resource.data.keys().hasAll(['directorName', 'visualTheme', 'mood', 'visualStyle', 'budget', 'timeline']) &&
        request.resource.data.status == 'pending';
      allow update: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.resource.data.directorId == request.auth.uid);
      allow delete: if false;  // No deletion allowed
    }

    // El resto de las reglas se mantienen igual
    match /directors/{directorId} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null;  // Only authenticated users can write
    }

    // Updated rules for projects - allow public creation
    match /projects/{projectId} {
      allow read: if true;
      allow create: if true;  // Allow public creation for music video requests
      allow update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }

    match /musicianImages/{imageId} {
      allow read: if true;  // Public read
      allow write: if request.auth != null;  // Only authenticated users can write
    }

    match /strategies/{strategyId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow list: if request.auth != null;
    }

    match /activities/{activityId} {
      allow read: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }

    match /users/{userId}/metrics/{metricId} {
      allow read, write: if isOwner(userId);
    }

    match /spotify_data/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /videos/{videoId} {
      allow read: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }

    match /songs/{songId} {
      allow read: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }

    match /youtube_views_orders/{orderId} {
      allow read: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }

    match /contacts/{contactId} {
      allow read: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }

    match /engagement/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }

    match /subscriptions/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /plans/{planId} {
      allow read: if true;  // Public read access
    }

    match /contracts/{contractId} {
      allow read: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow write: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }

    match /musician_images/{imageId} {
      allow read: if true;  // Public read access
      allow write: if request.auth != null;  // Only authenticated users can write
    }
  }
}