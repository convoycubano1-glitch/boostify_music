rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic user checks
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Artist Music collection rules
    match /artist_music/{songId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.artistId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.artistId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.artistId == request.auth.uid;
    }

    // Video Director AI collection rules
    match /Video_Director_AI/{docId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // AI Music Composer collection rules
    match /AI_Music_Composer/{docId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Strategic Marketing AI collection rules
    match /Strategic_Marketing_AI/{docId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Social Media AI collection rules
    match /Social_Media_AI/{docId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Merchandise Designer AI collection rules
    match /Merchandise_Designer_AI/{docId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Manager AI collection rules
    match /Manager_AI/{docId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Course rules
    match /courses/{courseId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        request.auth.uid == resource.data.createdBy;
    }

    // User metrics
    match /users/{userId}/metrics/{metricId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Course progress rules
    match /course_progress/{progressId} {
      allow read: if isAuthenticated() && progressId.matches(request.auth.uid + '_.*');
      allow create: if isAuthenticated() && progressId.matches(request.auth.uid + '_.*');
      allow update: if isAuthenticated() && progressId.matches(request.auth.uid + '_.*') &&
        (
          request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['completedLessons', 'completedExams', 'currentLesson', 
                     'lastAccessedAt', 'generatedImages', 'lessonImages',
                     'timeSpent', 'lastCompletedAt', 'lessonContents',
                     'examScores']) ||
          !exists(/databases/$(database)/documents/course_progress/$(progressId))
        );
    }

    // Allow read access to all authenticated users for public collections
    match /{document=**} {
      allow read: if isAuthenticated();
    }

    // Videos collection
    match /videos/{videoId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Songs collection
    match /songs/{songId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Activities collection
    match /activities/{activityId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Strategies collection
    match /strategies/{strategyId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Investors collection
    match /investors/{investorId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
  }
}