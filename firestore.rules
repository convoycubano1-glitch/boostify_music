rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para los datos de Spotify
    match /spotify_data/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para las órdenes de vistas de YouTube
    match /youtube_views_orders/{orderId} {
      // Permitir lectura si el usuario está autenticado y es el propietario
      allow read: if request.auth != null && 
        (
          orderId.split('_')[0] == request.auth.uid || 
          resource.data.userId == request.auth.uid
        );

      // Permitir creación si el usuario está autenticado y es el propietario
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;

      // Permitir actualización y eliminación solo al propietario
      allow update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
  }
}