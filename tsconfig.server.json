{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist",
    "esModuleInterop": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "client", "dist", "**/*.test.ts"]
}